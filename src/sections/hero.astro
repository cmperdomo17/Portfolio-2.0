---
import AnimatedSplitText from "@/components/text/animatedSplitText";
---

<section
  id="hero"
  class="min-h-screen pt-24 pb-16 flex items-center relative overflow-hidden"
>
  <div id="particles-container" class="absolute inset-0"></div>
  <div class="container mx-auto px-4 md:px-8">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Hero Content -->
      <div class="space-y-6 slide-in">
        <div
          class="inline-block py-1 px-3 rounded-full bg-indigo-900/50 border border-indigo-500/30 text-sm mb-2"
        >
          <span class="flex items-center gap-2">
            <span class="h-2 w-2 rounded-full bg-green-400 animate-pulse"
            ></span>
            <AnimatedSplitText
              text="Available for Freelance Projects"
              className="text-sm"
              client:load
              x={0}
              y={0}
              duration={0.5}
              stagger={0.02}
            />
          </span>
        </div>

        <AnimatedSplitText
          text="Hi, I'm Mario Perdomo"
          className="text-white text-4xl md:text-5xl lg:text-6xl font-bold"
          client:load
          x={-30}
          y={0}
          duration={0.8}
          stagger={0.05}
        />

        <AnimatedSplitText
          text="Full-Stack Developer"
          className="text-2xl md:text-3xl text-indigo-300 font-medium"
          client:load
          x={0}
          y={30}
          duration={1.2}
          stagger={0.08}
        />

        <AnimatedSplitText
          text="I craft digital experiences that blend creativity with technical excellence. Specializing in creating modern, responsive, and user-friendly web applications."
          className="text-gray-300 text-lg max-w-lg py-6"
          client:load
          x={0}
          y={20}
          duration={1.5}
          stagger={0.01}
        />

        <div class="flex flex-wrap gap-4 pt-4">
          <a
            href="#projects"
            class="btn-primary bg-indigo-600 hover:bg-indigo-700 text-white py-3 px-8 rounded-full transition-all duration-300 flex items-center gap-2 font-medium animate-fadeIn"
          >
            <i class="ri-eye-line"></i> View My Work
          </a>
          <a
            href="#contact"
            class="btn-secondary border border-indigo-500 text-white py-3 px-8 rounded-full hover:bg-indigo-500/20 transition-all duration-300 flex items-center gap-2 font-medium animate-slideInRight"
          >
            <i class="ri-chat-1-line"></i> Contact Me
          </a>
        </div>

        <div class="flex gap-6 pt-4">
          <a
            href="#"
            class="text-xl text-gray-400 hover:text-white transition-colors duration-300 hover:scale-110 transform"
          >
            <i class="ri-github-fill"></i>
          </a>
          <a
            href="#"
            class="text-xl text-gray-400 hover:text-white transition-colors duration-300 hover:scale-110 transform"
          >
            <i class="ri-linkedin-fill"></i>
          </a>
          <a
            href="#"
            class="text-xl text-gray-400 hover:text-white transition-colors duration-300 hover:scale-110 transform"
          >
            <i class="ri-twitter-x-fill"></i>
          </a>
          <a
            href="#"
            class="text-xl text-gray-400 hover:text-white transition-colors duration-300 hover:scale-110 transform"
          >
            <i class="ri-dribbble-line"></i>
          </a>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative slide-in max-w-md mx-auto md:ml-auto">
        <div
          class="hero-gradient absolute inset-0 rounded-2xl blur-3xl opacity-20 animate-pulse"
        >
        </div>
        <div
          class="relative z-10 border-4 border-indigo-500/20 p-4 rounded-2xl bg-slate-800/50 backdrop-blur-sm hover:border-indigo-500/40 transition-all duration-500"
        >
          <img
            src="/images/profile.png"
            alt="Developer Portrait"
            class="w-full h-auto rounded-xl"
          />
          <div
            class="absolute -bottom-6 -right-6 bg-indigo-600 rounded-full p-4 shadow-lg hover:scale-110 transition-transform duration-300"
          >
            <i class="ri-code-s-slash-line text-3xl"></i>
          </div>
        </div>

        <!-- Tech Stack Pills -->
        <div
          class="absolute -bottom-10 left-1/2 transform -translate-x-1/2 flex flex-wrap gap-3 justify-center w-full"
        >
          <span
            class="tech-pill bg-slate-800/90 backdrop-blur-sm py-2 px-4 rounded-full text-sm border border-indigo-500/30 flex items-center gap-1 hover:bg-slate-700/90 transition-all duration-300 hover:border-indigo-500/60"
          >
            <i class="ri-reactjs-line"></i>
            <AnimatedSplitText
              text="React"
              className="text-sm"
              client:load
              x={-20}
              stagger={0.1}
            />
          </span>
          <span
            class="tech-pill bg-slate-800/90 backdrop-blur-sm py-2 px-4 rounded-full text-sm border border-indigo-500/30 flex items-center gap-1 hover:bg-slate-700/90 transition-all duration-300 hover:border-indigo-500/60"
          >
            <i class="ri-nodejs-line"></i>
            <AnimatedSplitText
              text="Node.js"
              className="text-sm"
              client:load
              x={-20}
              stagger={0.1}
            />
          </span>
          <span
            class="tech-pill bg-slate-800/90 backdrop-blur-sm py-2 px-4 rounded-full text-sm border border-indigo-500/30 flex items-center gap-1 hover:bg-slate-700/90 transition-all duration-300 hover:border-indigo-500/60"
          >
            <i class="ri-tailwind-css-line"></i>
            <AnimatedSplitText
              text="Tailwind"
              className="text-sm"
              client:load
              x={-20}
              stagger={0.1}
            />
          </span>
        </div>
      </div>
    </div>
  </div>

  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @keyframes slideInRight {
      from {
        transform: translateX(-20px);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

    .animate-fadeIn {
      animation: fadeIn 0.8s forwards;
      animation-delay: 1s;
      opacity: 0;
    }

    .animate-slideInRight {
      animation: slideInRight 0.8s forwards;
      animation-delay: 1.2s;
      opacity: 0;
    }
  </style>
</section>
