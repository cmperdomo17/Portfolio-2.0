---
import GradientText from "@/animations/gradientText/gradientText";
import CardImage from "@/components/cardImage/cardImage.astro";
import { useTranslations } from "@/i18n/utils";

const currentLang = Astro.currentLocale || "en";

const translateLabels = useTranslations(currentLang as "en" | "es");
---

<section id="about" class="sections-separator">
  <div class="container mx-auto px-4 md:px-8 relative">
    <div class="flex flex-col items-center mb-16">
      <span class="text-primary font-medium mb-4 flex items-center gap-2">
        <div class="w-8 h-0.5 bg-primary"></div>
        {translateLabels("about.title")}
        <div class="w-8 h-0.5 bg-primary"></div>
      </span>
      <GradientText
        colors={[
          "var(--color-gradient-primary)",
          "var(--color-gradient-secondary)",
        ]}
        animationSpeed={10}
        showBorder={false}
        className="text-5xl font-extrabold bg-clip-text text-center"
        client:load
      >
        {translateLabels("about.headline")}{" "}
      </GradientText>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 items-center">
      <!-- About Image -->
      <div
        class="lg:col-span-1 relative max-w-md mx-auto animate-fadeIn"
        style="--delay: 0.5s"
      >
        <!-- Image -->
        <CardImage className="pb-16 px-10 md:p-0" />
      </div>

      <!-- About Content -->
      <div class="lg:col-span-2 space-y-6 text-left">
        <GradientText
          colors={[
            "var(--color-gradient-primary)",
            "var(--color-gradient-secondary)",
          ]}
          animationSpeed={10}
          showBorder={false}
          className="font-semibold text-2xl mb-4"
          client:load
        >
          {translateLabels("about.role")}
        </GradientText>

        <p class="text-gray-300">
          {translateLabels("about.paragraph1")}
        </p>

        <p class="text-gray-300">
          {translateLabels("about.paragraph2")}
        </p>

        <div class="pt-4">
          <GradientText
            colors={[
              "var(--color-gradient-primary)",
              "var(--color-gradient-secondary)",
            ]}
            animationSpeed={10}
            showBorder={false}
            className="font-bold text-xl mb-4"
            client:load
          >
            {translateLabels("about.techStack")}
          </GradientText>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <div
              class="skill-item flex items-center gap-3 bg-bg/70 p-3 rounded-lg border border-primary/40 hover:border-primary transition-colors duration-300"
            >
              <i class="ti ti-brand-nextjs text-xl text-text"></i>
              <span>Next.js</span>
            </div>
            <div
              class="skill-item flex items-center gap-3 bg-bg/70 p-3 rounded-lg border border-primary/40 hover:border-primary transition-colors duration-300"
            >
              <i class="ti ti-brand-react text-xl text-blue-400"></i>
              <span>React</span>
            </div>
            <div
              class="skill-item flex items-center gap-3 bg-bg/70 p-3 rounded-lg border border-primary/40 hover:border-primary transition-colors duration-300"
            >
              <i class="ti ti-brand-astro text-xl text-red-400"></i>
              <span>Astro</span>
            </div>
            <div
              class="skill-item flex items-center gap-3 bg-bg/70 p-3 rounded-lg border border-primary/40 hover:border-primary transition-colors duration-300"
            >
              <i class="ti ti-brand-tailwind text-xl text-blue-400"></i>
              <span>Tailwind CSS</span>
            </div>
            <div
              class="skill-item flex items-center gap-3 bg-bg/70 p-3 rounded-lg border border-primary/40 hover:border-primary transition-colors duration-300"
            >
              <i class="ti ti-brand-typescript text-xl text-blue-400"></i>
              <span>TypeScript</span>
            </div>
            <div
              class="skill-item flex items-center gap-3 bg-bg/70 p-3 rounded-lg border border-primary/40 hover:border-primary transition-colors duration-300"
            >
              <i class="ti ti-blocks text-xl text-sky-400"></i>
              <span>Zustand</span>
            </div>
            <div
              class="skill-item flex items-center gap-3 bg-bg/70 p-3 rounded-lg border border-primary/40 hover:border-primary transition-colors duration-300"
            >
              <i class="ti ti-database text-xl text-emerald-400"></i>
              <span>MySQL</span>
            </div>
            <div
              class="skill-item flex items-center gap-3 bg-bg/70 p-3 rounded-lg border border-primary/40 hover:border-primary transition-colors duration-300"
            >
              <i class="ti ti-brand-github text-xl text-orange-600"></i>
              <span>Git & GitHub</span>
            </div>
            <div
              class="skill-item flex items-center gap-3 bg-bg/70 p-3 rounded-lg border border-primary/40 hover:border-primary transition-colors duration-300"
            >
              <i class="ti ti-lock text-xl text-primary"></i>
              <span>JWT & Auth</span>
            </div>
          </div>
        </div>

        <!-- Personal Info -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-4">
          <div class="flex items-center gap-3">
            <i class="ri-calendar-line text-primary"></i>
            <span
              ><strong>{translateLabels("about.birth")}:</strong> 27 Nov 2002</span
            >
          </div>
          <div class="flex items-center gap-3">
            <i class="ri-map-pin-line text-primary"></i>
            <span
              ><strong>{translateLabels("about.location")}:</strong> Pitalito, Huila</span
            >
          </div>
          <div class="flex items-center gap-3">
            <i class="ri-mail-line text-primary"></i>
            <span
              ><strong>{translateLabels("about.email")}:</strong> cmperdomo7@gmail.com</span
            >
          </div>
          <div class="flex items-center gap-3">
            <i class="ri-translate-2 text-primary"></i>
            <span
              ><strong>{translateLabels("about.languages")}:</strong> English, Spanish</span
            >
          </div>
        </div>

        <!-- CTA Button -->
        <div class="pt-6">
          <a
            href="https://res.cloudinary.com/ddfabfatl/image/upload/v1747789372/CV_English_ry76dl.pdf"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-transparent border border-primary hover:bg-primary hover:text-background text-text font-semibold py-3 px-6 rounded-full transition-all duration-300"
          >
            <i class="ti ti-file-cv"></i>
            {translateLabels("about.resume")}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
