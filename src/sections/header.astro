---
import GradientText from "@/animations/gradientText/gradientText";
---

<header
  id="navbar"
  class="fixed bg-[#0f172a]/90 w-full top-0 left-0 z-50 transition-all duration-300 py-4"
>
  <div class="container mx-auto px-4 md:px-8">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a
        href="#"
        class="text-2xl font-bold text-gradient flex items-center gap-2"
      >
        <GradientText
          colors={["#40ffaa", "#4079ff", "#40ffaa", "#4079ff", "#615fff"]}
          animationSpeed={6}
          showBorder={false}
          className=""
          client:load
        >
          <i class="ri-code-s-slash-line"></i>
          mario.dev
        </GradientText>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a
          href="#about"
          class="text-gray-300 hover:text-white transition-colors duration-300"
          >About</a
        >
        <a
          href="#projects"
          class="text-gray-300 hover:text-white transition-colors duration-300"
          >Projects</a
        >
        <a
          href="#experience"
          class="text-gray-300 hover:text-white transition-colors duration-300"
          >Experience</a
        >
        <a
          href="#contact"
          class="text-gray-300 hover:text-white transition-colors duration-300"
          >Contact</a
        >
        <a
          href="#"
          class="bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-6 rounded-full transition-all duration-300 flex items-center gap-2"
        >
          <i class="ti ti-download"></i>
          Resume 
        </a
        > 
      </nav>
    </div>

    <!-- Mobile Menu Button -->
    <button id="menu-btn" class="md:hidden text-2xl">
      <i class="ti ti-menu"></i>
    </button>
  </div>
</header>

<!-- Mobile Navigation -->
<div
  id="mobile-menu"
  class="md:hidden bg-slate-900 absolute top-full left-0 w-full py-4 px-4 hidden"
>
  <div class="flex flex-col space-y-4">
    <a
      href="#about"
      class="text-gray-300 hover:text-white transition-colors duration-300 py-2"
      >About</a
    >
    <a
      href="#projects"
      class="text-gray-300 hover:text-white transition-colors duration-300 py-2"
      >Projects</a
    >
    <a
      href="#experience"
      class="text-gray-300 hover:text-white transition-colors duration-300 py-2"
      >Experience</a
    >
    <a
      href="#contact"
      class="text-gray-300 hover:text-white transition-colors duration-300 py-2"
      >Contact</a
    >
    <a
      href="#"
      class="bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-6 rounded-full transition-all duration-300 flex items-center gap-2 justify-center"
    >
      <i class="ri-download-line"></i> Resume
    </a>
  </div>
</div>
