---
import GradientText from "@/animations/gradientText/gradientText";
---

<footer class="bg-background/10 border-t border-primary pt-16 pb-8">
  <div class="container mx-auto px-4 md:px-8">
    <!-- Top Footer -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Brand Column -->
      <div class="space-y-4 flex flex-col items-start">
        <a
          href="#hero"
          class="text-2xl font-bold text-gradient flex items-center gap-2"
        >
          <GradientText
            colors={["#42d9c8", "#338b80", "#42d9c8", "#338b80"]}
            animationSpeed={10}
            showBorder={false}
            className=""
            client:load
          >
            <i class="ri-code-s-slash-line"></i>
            mario.dev
          </GradientText>
        </a>
        <p class="text-gray-400 max-w-xs">
          Creating digital experiences that blend creativity with technical
          excellence.
        </p>
        <div class="flex gap-4 pt-2">
          <a
            href="#"
            class="text-lg text-gray-400 hover:text-text transition-colors duration-300 hover:scale-110"
          >
            <i class="ri-github-fill"></i>
          </a>
          <a
            href="#"
            class="text-lg text-gray-400 hover:text-text transition-colors duration-300 hover:scale-110"
          >
            <i class="ri-linkedin-fill"></i>
          </a>
          <a
            href="#"
            class="text-lg text-gray-400 hover:text-text transition-colors duration-300 hover:scale-110"
          >
            <i class="ri-twitter-x-fill"></i>
          </a>
          <a
            href="#"
            class="text-lg text-gray-400 hover:text-text transition-colors duration-300 hover:scale-110"
          >
            <i class="ri-dribbble-line"></i>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4 flex flex-col items-start w-1/3">
        <GradientText
          colors={["#42d9c8", "#338b80", "#42d9c8", "#338b80"]}
          animationSpeed={10}
          showBorder={false}
          className="font-bold text-lg mb-4"
          client:load
        >
          Quick Links
        </GradientText>

        <ul class="space-y-2">
          <li>
            <a
              href="#about"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-arrow-right-s-line"></i> About Me
            </a>
          </li>
          <li>
            <a
              href="#projects"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-arrow-right-s-line"></i> Projects
            </a>
          </li>
          <li>
            <a
              href="#experience"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-arrow-right-s-line"></i> Experience
            </a>
          </li>
          <li>
            <a
              href="#skills"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-arrow-right-s-line"></i> Skills
            </a>
          </li>
          <li>
            <a
              href="#contact"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-arrow-right-s-line"></i> Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Services -->
      <div class="space-y-4 flex flex-col items-start">
        <GradientText
          colors={["#42d9c8", "#338b80", "#42d9c8", "#338b80"]}
          animationSpeed={10}
          showBorder={false}
          className="font-bold text-lg mb-4"
          client:load
        >
          Services
        </GradientText>

        <ul class="space-y-2">
          <li>
            <a
              href="#"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-code-box-line"></i> Web Development
            </a>
          </li>
          <li>
            <a
              href="#"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-palette-line"></i> UI/UX Design
            </a>
          </li>
          <li>
            <a
              href="#"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-smartphone-line"></i> Mobile Development
            </a>
          </li>
          <li>
            <a
              href="#"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-server-line"></i> Backend Solutions
            </a>
          </li>
          <li>
            <a
              href="#"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-search-line"></i> SEO Optimization
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="space-y-4">
        <GradientText
          colors={["#42d9c8", "#338b80", "#42d9c8", "#338b80"]}
          animationSpeed={10}
          showBorder={false}
          className="font-bold text-lg mb-4"
          client:load
        >
          Get In Touch
        </GradientText>
        <ul class="space-y-3">
          <li class="text-gray-400 flex items-center gap-3">
            <i class="ri-mail-line text-primary"></i>
            <a
              href="mailto:hello@devportfolio.com"
              class="hover:text-text transition-colors duration-300"
            >
              cmperdomo7@gmail.com
            </a>
          </li>
          <li class="text-gray-400 flex items-center gap-3">
            <i class="ri-phone-line text-primary"></i>
            <a
              href="tel:+1234567890"
              class="hover:text-text transition-colors duration-300"
            >
              +57 310 720 9419
            </a>
          </li>
          <li class="text-gray-400 flex items-start gap-3">
            <i class="ri-map-pin-line text-primary mt-1"></i>
            <span>Pitalito, Huila<br />Colombia</span>
          </li>
        </ul>

        <!-- Newsletter Form -->
        <div class="mt-6 space-y-3">
          <label for="newsletter" class="text-sm text-gray-300"
            >Stay Updated</label
          >
          <div class="flex mt-2">
            <input
              type="email"
              id="newsletter"
              placeholder="Enter your email"
              class="bg-background/20 border border-primary rounded-l-full py-2 px-4 focus:outline-none focus:border-white text-gray-300 w-full text-sm"
            />
            <button
              class="bg-primary hover:bg-tertiary text-background hover:text-text py-2 px-4 rounded-r-full transition-colors duration-300"
            >
              <i class="ri-send-plane-fill text-xl text-center"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-800 my-8"></div>

    <!-- Bottom Footer -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-400 text-sm">
        Â© <span id="current-year">
          {new Date().getFullYear()}
        </span> Mario Dev. All rights reserved.
      </p>

      <div class="flex items-center gap-6">
        <a
          href="#"
          class="text-gray-400 hover:text-text text-sm transition-colors duration-300"
          >Privacy Policy</a
        >
        <a
          href="#"
          class="text-gray-400 hover:text-text text-sm transition-colors duration-300"
          >Terms of Service</a
        >
        <a
          href="#"
          class="text-gray-400 hover:text-text text-sm transition-colors duration-300"
          >Cookie Policy</a
        >
      </div>

      <a
        href="#hero"
        class="bg-primary hover:bg-tertiary hover:text-text text-background px-3 py-2 rounded-full transition-all duration-300"
      >
        <i class="ri-arrow-up-line text-xl font-semibold"></i>
      </a>
    </div>
  </div>
</footer>
