---
import GradientText from "@/animations/gradientText/gradientText";
import SocialLinks from "@/components/socialLinks/socialLinks.astro";
import { useTranslations } from "@/i18n/utils";

const currentLang = Astro.currentLocale || "en";
const translateLabels = useTranslations(currentLang as "en" | "es");
---

<footer class="bg-background/10 border-t border-primary pt-16 pb-8">
  <div class="container mx-auto px-4 md:px-8">
    <!-- Top Footer -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Brand Column -->
      <div class="space-y-4 flex flex-col items-start">
        <a
          href="#hero"
          class="text-2xl font-bold text-gradient flex items-center gap-2"
        >
          <GradientText
            colors={["var(--color-gradient-primary)", "var(--color-gradient-secondary)"]}
            animationSpeed={10}
            showBorder={false}
            className=""
            client:load
          >
            <i class="ri-code-s-slash-line"></i>
            mario.dev
          </GradientText>
        </a>
        <p class="text-gray-400 max-w-xs">
          {translateLabels("footer.brandDescription")}
        </p>
        <SocialLinks />
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <GradientText
          colors={["var(--color-gradient-primary)", "var(--color-gradient-secondary)"]}
          animationSpeed={10}
          showBorder={false}
          className="font-bold text-lg mb-4"
          client:load
        >
          {translateLabels("footer.quickLinksTitle")}
        </GradientText>

        <ul class="space-y-2">
          <li>
            <a
              href="#about"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-arrow-right-s-line"></i>
              {translateLabels("footer.linkAbout")}
            </a>
          </li>
          <li>
            <a
              href="#projects"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-arrow-right-s-line"></i>
              {translateLabels("footer.linkProjects")}
            </a>
          </li>
          <li>
            <a
              href="#experience"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-arrow-right-s-line"></i>
              {translateLabels("footer.linkExperience")}
            </a>
          </li>
          <li>
            <a
              href="#skills"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-arrow-right-s-line"></i>
              {translateLabels("footer.linkSkills")}
            </a>
          </li>
          <li>
            <a
              href="#contact"
              class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
            >
              <i class="ri-arrow-right-s-line"></i>
              {translateLabels("footer.linkContact")}
            </a>
          </li>
        </ul>
      </div>

      <!-- Services -->
      <div class="space-y-4 flex flex-col items-start">
        <GradientText
          colors={["var(--color-gradient-primary)", "var(--color-gradient-secondary)"]}
          animationSpeed={10}
          showBorder={false}
          className="font-bold text-lg mb-4"
          client:load
        >
          {translateLabels("footer.servicesTitle")}
        </GradientText>

        <ul class="space-y-2">
          <li>
        <span
          class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
        >
          <i class="ri-code-box-line"></i>
          {translateLabels("footer.serviceWebDevelopment")}
        </span>
          </li>
          <li>
        <span
          class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
        >
          <i class="ri-palette-line"></i>
          {translateLabels("footer.serviceUIUXDesign")}
        </span>
          </li>
          <li>
        <span
          class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
        >
          <i class="ri-smartphone-line"></i>
          {translateLabels("footer.serviceMobileDevelopment")}
        </span>
          </li>
          <li>
        <span
          class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
        >
          <i class="ri-server-line"></i>
          {translateLabels("footer.serviceBackendSolutions")}
        </span>
          </li>
          <li>
        <span
          class="text-gray-400 hover:text-text transition-colors duration-300 flex items-center gap-2"
        >
          <i class="ri-search-line"></i>
          {translateLabels("footer.serviceSEOOptimization")}
        </span>
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="space-y-4">
        <GradientText
          colors={["var(--color-gradient-primary)", "var(--color-gradient-secondary)"]}
          animationSpeed={10}
          showBorder={false}
          className="font-bold text-lg mb-4"
          client:load
        >
          {translateLabels("footer.contactTitle")}
        </GradientText>
        <ul class="space-y-3">
          <li class="text-gray-400 flex items-center gap-3">
            <i class="ri-mail-line text-primary"></i>
            <a
              href="mailto:cmperdomo7@gmail.com"
              class="hover:text-text transition-colors duration-300"
            >
              cmperdomo7@gmail.com
            </a>
          </li>
          <li class="text-gray-400 flex items-center gap-3">
            <i class="ri-phone-line text-primary"></i>
            <a
              href="tel:+573107209419"
              class="hover:text-text transition-colors duration-300"
            >
              +57 310 720 9419
            </a>
          </li>
          <li class="text-gray-400 flex items-start gap-3">
            <i class="ri-map-pin-line text-primary"></i>
            <span>{translateLabels("footer.contactLocation")}</span>
          </li>
        </ul>

        <!-- Newsletter Form -->
        <div class="mt-6 space-y-3">
          <label for="newsletter" class="text-sm text-gray-300">
            {translateLabels("footer.newsletterTitle")}
          </label>
          <div class="flex mt-2">
            <input
              type="email"
              id="newsletter"
              placeholder={Array.isArray(translateLabels("footer.newsletterPlaceholder")) ? translateLabels("footer.newsletterPlaceholder")[0] : translateLabels("footer.newsletterPlaceholder") as string}
              class="bg-background/20 border border-primary rounded-l-full py-2 px-4 focus:outline-none focus:border-white text-gray-300 w-full text-sm"
            />
            <button
              class="bg-primary hover:bg-tertiary text-background hover:text-text py-2 px-4 rounded-r-full transition-colors duration-300"
            >
              <i class="ri-send-plane-fill text-xl text-center"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-800 my-8"></div>

    <!-- Bottom Footer -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-400 text-sm">
        Â© <span id="current-year">{new Date().getFullYear()}</span> Mario Dev.{" "}
        {translateLabels("footer.copyright")}
      </p>

      <div class="flex items-center gap-6">
        <span
          class="text-gray-400 hover:text-text text-sm transition-colors duration-300 cursor-pointer"
        >
          {translateLabels("footer.privacyPolicy")}
        </span>
        <span
          class="text-gray-400 hover:text-text text-sm transition-colors duration-300 cursor-pointer"
        >
          {translateLabels("footer.termsOfService")}
        </span>
        <span
          class="text-gray-400 hover:text-text text-sm transition-colors duration-300 cursor-pointer"
        >
          {translateLabels("footer.cookiePolicy")}
        </span>
      </div>

      <a
        href="#hero"
        class="bg-primary hover:bg-tertiary hover:text-text text-background px-3 py-2 rounded-full transition-all duration-300"
      >
        <i class="ri-arrow-up-line text-xl font-semibold"></i>
      </a>
    </div>
  </div>
</footer>