<section id="experience" class="py-24 bg-slate-900">
  <div class="container mx-auto px-4 md:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        <span class="text-5xl font-extrabold bg-gradient-to-r from-indigo-400 to-white text-transparent bg-clip-text">
          Professional Experience
        </span>
      </h2>
      <p class="text-gray-300 max-w-2xl mx-auto">
        My journey through the tech industry, where I've collaborated with
        amazing teams to create impactful solutions.
      </p>
    </div>

    <!-- Timeline Container -->
    <div class="relative max-w-4xl mx-auto">
      <!-- Vertical Line -->
      <div
        class="absolute left-0 md:left-1/2 transform md:-translate-x-1/2 h-full w-1 bg-indigo-600/30"
      >
      </div>

      <!-- Timeline Items -->
      <div class="timeline-items space-y-12">
        <!-- Item 1 -->
        <div class="timeline-item">
          <div class="md:flex items-center">
            <!-- Left Side (Date for desktop) -->
            <div class="hidden md:block md:w-1/2 pr-12 text-right">
              <span class="block text-indigo-400 font-semibold mb-1"
                >2025 - Present</span
              >
            </div>

            <!-- Center Dot -->
            <div
              class="absolute left-0 md:left-1/2 transform -translate-y-1/4 md:-translate-x-1/2 w-6 h-6 rounded-full border-4 border-indigo-600 bg-slate-900 z-10"
            >
            </div>

            <!-- Right Side (Content for desktop) -->
            <div class="md:w-1/2 md:pl-12 ml-8 md:ml-0">
              <!-- Mobile Only Date -->
              <span class="block md:hidden text-indigo-400 font-semibold mb-1"
                >2025 - Present</span
              >

              <div
                class="bg-slate-800/50 backdrop-blur-sm p-6 rounded-lg border border-indigo-500/20 timeline-content opacity-0 transform translate-y-8"
              >
                <div class="flex items-center mb-3">
                  <h3 class="text-xl font-bold mr-auto">
                    Senior Frontend Developer
                  </h3>
                  <span
                    class="bg-indigo-600/20 text-indigo-400 text-xs px-3 py-1 rounded-full"
                    >Full-time</span
                  >
                </div>
                <h4
                  class="text-white/80 font-medium mb-3 flex items-center gap-2"
                >
                  <i class="ri-building-4-line"></i> Enterprise
                </h4>
                <p class="text-gray-400 mb-4">
                  Led the frontend development of the company's flagship SaaS
                  product, improving performance by 40% and implementing a
                  component library used across three products.
                </p>
                <div class="flex flex-wrap gap-2">
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >React</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >TypeScript</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >Redux</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >Tailwind CSS</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Item 2 -->
        <div class="timeline-item">
          <div class="md:flex items-center">
            <!-- Left Side (Content for desktop) -->
            <div class="md:w-1/2 pr-12 hidden md:block text-right">
              <div
                class="bg-slate-800/50 backdrop-blur-sm p-6 rounded-lg border border-indigo-500/20 timeline-content opacity-0 transform translate-y-8"
              >
                <div class="flex flex-row-reverse items-center mb-3">
                  <span
                    class="bg-indigo-600/20 text-indigo-400 text-xs px-3 py-1 rounded-full ml-3"
                    >Full-time</span
                  >
                  <h3 class="text-xl font-bold ml-auto text-right">
                    Frontend Developer
                  </h3>
                </div>
                <h4
                  class="text-white/80 font-medium mb-3 flex items-center justify-end gap-2"
                >
                  Enterprise <i class="ri-building-2-line"></i>
                </h4>
                <p class="text-gray-400 mb-4">
                  Developed responsive web applications for clients in fintech
                  and e-commerce sectors, collaborating with design and backend
                  teams to deliver pixel-perfect implementations.
                </p>
                <div class="flex flex-wrap gap-2 justify-end">
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >Vue.js</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >JavaScript</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >SCSS</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >Jest</span
                  >
                </div>
              </div>
            </div>

            <!-- Center Dot -->
            <div
              class="absolute left-0 md:left-1/2 transform -translate-y-1/4 md:-translate-x-1/2 w-6 h-6 rounded-full border-4 border-indigo-600 bg-slate-900 z-10"
            >
            </div>

            <!-- Right Side (Date for desktop) -->
            <div class="md:w-1/2 md:pl-12 ml-8 md:ml-0">
              <!-- Mobile Only Date -->
              <span class="block md:hidden text-indigo-400 font-semibold mb-1"
                >2023 - 2024</span
              >

              <!-- Mobile Only Content (hidden on desktop) -->
              <div
                class="md:hidden bg-slate-800/50 backdrop-blur-sm p-6 rounded-lg border border-indigo-500/20 timeline-content opacity-0 transform translate-y-8"
              >
                <div class="flex items-center mb-3">
                  <h3 class="text-xl font-bold mr-auto">Frontend Developer</h3>
                  <span
                    class="bg-indigo-600/20 text-indigo-400 text-xs px-3 py-1 rounded-full"
                    >Full-time</span
                  >
                </div>
                <h4
                  class="text-white/80 font-medium mb-3 flex items-center gap-2"
                >
                  <i class="ri-building-2-line"></i> Enterprise
                </h4>
                <p class="text-gray-400 mb-4">
                  Developed responsive web applications for clients in fintech
                  and e-commerce sectors, collaborating with design and backend
                  teams to deliver pixel-perfect implementations.
                </p>
                <div class="flex flex-wrap gap-2">
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >Vue.js</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >JavaScript</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >SCSS</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >Jest</span
                  >
                </div>
              </div>

              <!-- Desktop Only Date -->
              <span class="hidden md:block text-indigo-400 font-semibold mb-1"
                >2023 - 2024</span
              >
            </div>
          </div>
        </div>

        <!-- Item 3 -->
        <div class="timeline-item">
          <div class="md:flex items-center">
            <!-- Left Side (Date for desktop) -->
            <div class="hidden md:block md:w-1/2 pr-12 text-right">
              <span class="block text-indigo-400 font-semibold mb-1"
                >2022 - 2023</span
              >
            </div>

            <!-- Center Dot -->
            <div
              class="absolute left-0 md:left-1/2 transform -translate-y-1/4 md:-translate-x-1/2 w-6 h-6 rounded-full border-4 border-indigo-600 bg-slate-900 z-10"
            >
            </div>

            <!-- Right Side (Content for desktop) -->
            <div class="md:w-1/2 md:pl-12 ml-8 md:ml-0">
              <!-- Mobile Only Date -->
              <span class="block md:hidden text-indigo-400 font-semibold mb-1"
                >2022 - 2023</span
              >

              <div
                class="bg-slate-800/50 backdrop-blur-sm p-6 rounded-lg border border-indigo-500/20 timeline-content opacity-0 transform translate-y-8"
              >
                <div class="flex items-center mb-3">
                  <h3 class="text-xl font-bold mr-auto">
                    Junior Web Developer
                  </h3>
                  <span
                    class="bg-indigo-600/20 text-indigo-400 text-xs px-3 py-1 rounded-full"
                    >Full-time</span
                  >
                </div>
                <h4
                  class="text-white/80 font-medium mb-3 flex items-center gap-2"
                >
                  <i class="ri-building-line"></i> Enterprise
                </h4>
                <p class="text-gray-400 mb-4">
                  Built and maintained responsive websites for small to medium
                  businesses, focusing on SEO optimization and performance
                  enhancements.
                </p>
                <div class="flex flex-wrap gap-2">
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >HTML5</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >CSS3</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >JavaScript</span
                  >
                  <span class="bg-slate-700/70 text-xs px-3 py-1 rounded-full"
                    >WordPress</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Intersection Observer for Timeline Animation
    document.addEventListener("DOMContentLoaded", () => {
      const timelineContents = document.querySelectorAll(".timeline-content");

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              (entry.target as HTMLElement).style.opacity = "1";
              (entry.target as HTMLElement).style.transform = "translateY(0)";
              (entry.target as HTMLElement).style.transition =
                "opacity 0.5s ease, transform 0.7s ease";
            }
          });
        },
        { threshold: 0.2 }
      );

      timelineContents.forEach((content) => {
        observer.observe(content);
      });
    });
  </script>
</section>
